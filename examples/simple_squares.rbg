#game = "SimpleSquares"

#board = [empty, empty, empty]

#players = sad, happy
#pieces = empty, piece, happypiece
#variables =

#anySquare =
    (
            ( 1, 0)
          + ( 0, 1)
          + (-1, 0)
          + ( 0,-1)
    )^*

#rules =
    (
        (
        anySquare
        [piece]
        (? (! (1,0) ) )
        ->happy
        [happypiece]
        ->sad
        )^*
    )



