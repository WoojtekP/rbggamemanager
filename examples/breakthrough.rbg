    (
        anySquare
        (b)[e]
        ((0,-1)(e) + (-1,-1)((e,w)) + (1,-1)((e,w)))
        ->
        ( (0,7) [$white=0, $black=10] ->()
          + (?(!(0,-1))))
        [b]
    )

#rules =
    (
        moveWhite
        [$white=10, $black=0]->black
        moveBlack
        [$white=0, $black=10]->white
    )^*

