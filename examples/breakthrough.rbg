#anySquare = ((1,0)^*(0,1)^*(-7,-7)(1,0)^*(0,1)^*)

#moveWhite = 
    (
        anySquare
        (w)[e]
        ((0,1)(e) + (-1,1)((e,b)) + (1,1)((e,b)))
        ->
        ( (0,-7) [$white=10, $black=0] ->()
          + (?(!(0,1))))
